<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="Model.ProductsEntity">
        <table name="products" schema="public" catalog="Web"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="description">
                <column name="description" nullable="false"/>
            </basic>
            <basic name="regularPrice">
                <column name="regular_price" nullable="false" precision="-1"/>
            </basic>
            <basic name="discountPrice">
                <column name="discount_price" nullable="false" precision="-1"/>
            </basic>
            <basic name="quantity">
                <column name="quantity" nullable="false" precision="-1"/>
            </basic>
            <basic name="image">
                <column name="image" nullable="false"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
